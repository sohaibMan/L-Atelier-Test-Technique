# =============================================================================
# TENNIS API - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Fill in all the values with your actual configuration
# 3. Generate strong passwords for all password fields
# 4. Never commit the .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
HOST=localhost
SERVER_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting (requests per 15 minutes per IP)
RATE_LIMIT_MAX=100

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=

# API Key for external services (if needed)
API_KEY=

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# MONGODB CONFIGURATION
# -----------------------------------------------------------------------------
# MongoDB Connection URI
MONGODB_URI=

# MongoDB Connection Pool Settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000
MONGODB_HEARTBEAT_FREQUENCY=10000

# -----------------------------------------------------------------------------
# MONGODB CREDENTIALS
# -----------------------------------------------------------------------------
# Root admin credentials (for database administration)
MONGO_INITDB_ROOT_USERNAME=
MONGO_INITDB_ROOT_PASSWORD=

# Database name
MONGO_INITDB_DATABASE=

# Application user credentials (for app connections)
MONGO_APP_USERNAME=
MONGO_APP_PASSWORD=

# MongoDB Replica Set Key (for internal cluster authentication)
MONGO_REPLICA_SET_KEY=

# -----------------------------------------------------------------------------
# MONGO EXPRESS (WEB UI) CREDENTIALS
# -----------------------------------------------------------------------------
# Basic auth for Mongo Express web interface
MONGO_EXPRESS_BASICAUTH_USERNAME=
MONGO_EXPRESS_BASICAUTH_PASSWORD=

# -----------------------------------------------------------------------------
# APPLICATION LIMITS
# -----------------------------------------------------------------------------
# Memory limit in MB
MEMORY_LIMIT_MB=512

# Request body size limit
REQUEST_SIZE_LIMIT=10mb

# File upload size limit
UPLOAD_SIZE_LIMIT=5mb

# -----------------------------------------------------------------------------
# SSL/TLS CONFIGURATION (for production)
# -----------------------------------------------------------------------------
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key
# SSL_CA_PATH=/path/to/ca-bundle.crt

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES (if needed)
# -----------------------------------------------------------------------------
# SMTP Configuration for email notifications
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=

# Redis Configuration (if using for caching/sessions)
# REDIS_URL=
# REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# MONITORING & OBSERVABILITY
# -----------------------------------------------------------------------------
# Application Performance Monitoring
# APM_SERVER_URL=
# APM_SECRET_TOKEN=

# Health check endpoint path
HEALTH_CHECK_PATH=/api/players/stats

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS
# -----------------------------------------------------------------------------
# Enable debug mode (development only)
DEBUG_MODE=false

# Enable API documentation
ENABLE_API_DOCS=true

# Enable request logging
ENABLE_REQUEST_LOGGING=true