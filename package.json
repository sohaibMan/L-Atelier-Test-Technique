{
  "name": "l-atelier-test-technique",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "jest tests/e2e --testTimeout=30000",
    "test:e2e:watch": "jest tests/e2e --watch --testTimeout=30000",
    "docs": "echo 'Documentation API disponible sur $SERVER_URL/api-docs ou http://localhost:3000/api-docs'",
    "docker:build": "docker build -t latelier-api .",
    "docker:run": "docker run -p 3000:3000 latelier-api",
    "docker:dev": "docker-compose up --build",
    "mongo:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "mongo:stop": "docker-compose -f docker-compose.dev.yml down",
    "mongo:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "mongo:shell": "docker exec -it mongodb-dev mongosh -u admin -p dev_password --authenticationDatabase admin",
    "mongo:status": "docker exec mongodb-dev mongosh -u admin -p dev_password --authenticationDatabase admin --eval 'db.runCommand({connectionStatus: 1})'",
    "deploy:prod": "./scripts/deploy.sh production"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.3.4",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "mongoose": "^9.0.2",
    "morgan": "^1.10.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^25.0.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.2",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
