{
  "name": "l-atelier-test-technique",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "docker compose -f docker-compose.dev.yml up mongodb -d && tsx watch src/server.ts",
    "dev:full": "docker compose -f docker-compose.dev.yml up --build -d",
    "dev:stop": "docker compose -f docker-compose.dev.yml down",
    "dev:logs": "docker compose -f docker-compose.dev.yml logs -f mongodb",
    "test:env": "node scripts/test-env-detection.js",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest tests/unit",
    "test:unit:calculations": "jest tests/unit/playerService.calculations.test.ts",
    "test:integration": "jest tests/integration",
    "test:integration:db": "node tests/run-integration-tests.js",
    "test:calculations": "node tests/run-all-calculation-tests.js",
    "test:e2e": "jest tests/e2e",
    "clean": "rm -rf dist coverage",
    "clean:all": "rm -rf dist coverage node_modules cdk/node_modules",
    "audit": "npm audit --audit-level moderate",
    "outdated": "npm outdated",

    "docs": "echo 'Documentation API disponible sur http://localhost:3000/api-docs'",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build -d",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:dev:stop": "docker compose -f docker-compose.dev.yml down",
    "deploy:aws": "tsx scripts/deploy-aws.ts",
    "destroy:aws": "tsx scripts/destroy-aws.ts",
    "update:deployment-info": "tsx scripts/update-deployment-info.ts",
    "populate:data": "node scripts/populate-api-data.cjs",
    "scripts:build": "tsc -p scripts/tsconfig.json",
    "scripts:deploy": "npm run scripts:build && node scripts/dist/deploy-aws.js",
    "scripts:destroy": "npm run scripts:build && node scripts/dist/destroy-aws.js"
  },
  "keywords": ["tennis", "api", "rest", "nodejs", "express", "mongodb"],
  "author": "L'Atelier <sohaib.manah.contact@gmail.com>",
  "license": "ISC",
  "description": "API REST pour la gestion des joueurs de tennis et le calcul de statistiques",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.3.4",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "mongoose": "^9.0.2",
    "morgan": "^1.10.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.2",
    "prettier": "^3.7.4",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
