# =============================================================================
# TENNIS API - TEST ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV=test
PORT=0
HOST=localhost
SERVER_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_MAX=1000
JWT_SECRET=test-jwt-secret-not-for-production
API_KEY=test-api-key

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
LOG_LEVEL=error

# -----------------------------------------------------------------------------
# MONGODB CONFIGURATION (In-memory for tests)
# -----------------------------------------------------------------------------
MONGODB_URI=mongodb://localhost:27017/latelier_test
MONGODB_MAX_POOL_SIZE=5
MONGODB_SERVER_SELECTION_TIMEOUT=2000
MONGODB_SOCKET_TIMEOUT=10000

# -----------------------------------------------------------------------------
# MONGODB CREDENTIALS (Test values)
# -----------------------------------------------------------------------------
MONGO_INITDB_ROOT_USERNAME=test_admin
MONGO_INITDB_ROOT_PASSWORD=test_password
MONGO_INITDB_DATABASE=latelier_test
MONGO_APP_USERNAME=test_user
MONGO_APP_PASSWORD=test_password
MONGO_REPLICA_SET_KEY=test_replica_key

# -----------------------------------------------------------------------------
# APPLICATION LIMITS
# -----------------------------------------------------------------------------
MEMORY_LIMIT_MB=256
REQUEST_SIZE_LIMIT=1mb
UPLOAD_SIZE_LIMIT=1mb

# -----------------------------------------------------------------------------
# TEST SETTINGS
# -----------------------------------------------------------------------------
DEBUG_MODE=false
ENABLE_API_DOCS=false
ENABLE_REQUEST_LOGGING=false
HEALTH_CHECK_PATH=/api/players/stats